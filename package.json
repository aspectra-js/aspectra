{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/shunueda/aspectra.git"
  },
  "license": "MIT",
  "author": {
    "name": "Shun Ueda",
    "email": "me@shu.nu"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "pnpm --recursive --filter ./packages/* run build",
    "build:graphics": "toolbox graphics",
    "ci:publish": "pnpm check && pnpm -r type-check && pnpm build && pnpm test && changeset publish",
    "ci:version": "changeset version",
    "check": "biome check --write",
    "commit": "git add --all && cz",
    "format": "biome format --write",
    "prepare": "lefthook install",
    "test": "pnpm --recursive --filter ./packages/* run test"
  },
  "devDependencies": {
    "@aspectra/toolbox": "workspace:*",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@types/node": "^22.9.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^1.8.2",
    "pkg-pr-new": "^0.0.30",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=22"
  }
}
