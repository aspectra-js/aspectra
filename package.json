{
  "name": "aspectra",
  "version": "0.1.8",
  "description": "The decorator framework.",
  "keywords": [
    "aspect oriented",
    "decorator",
    "decorators",
    "dependency injection",
    "dependency inversion",
    "di",
    "injection",
    "inversion of control",
    "inversify",
    "ioc",
    "node",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shunueda/aspectra.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": ["dist"],
  "scripts": {
    "build:banner": "tsx scripts/banner",
    "build:docs": "tsx scripts/docs",
    "prebuild": "run-p build:*",
    "build": "tsup",
    "check": "pnpm format && biome check --write",
    "commit": "pnpm prebuild && git add --all && cz",
    "format:json": "sort-package-json",
    "format": "run-p format:*",
    "prepare": "lefthook install",
    "test": "tsx --test",
    "test:watch": "tsx --test --watch",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@microsoft/tsdoc": "^0.15.0",
    "@types/node": "^22.8.5",
    "@types/react": "^18.3.12",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "geist": "^1.3.1",
    "lefthook": "^1.8.2",
    "npm-run-all": "^4.1.5",
    "pkg-pr-new": "^0.0.30",
    "react": "^18.3.1",
    "release-it": "^17.10.0",
    "release-it-pnpm": "^4.6.3",
    "satori": "^0.11.2",
    "sort-package-json": "^2.10.1",
    "ts-markdown": "^1.2.0",
    "ts-morph": "^24.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
