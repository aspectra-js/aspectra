{
  "name": "aspectra",
  "version": "0.0.0",
  "description": "The decorator library.",
  "repository": {
    "type": "git",
    "url": "https://github.com/shunueda/aspectra.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "check": "biome check --write",
    "commit": "git add --all && cz",
    "format": "biome format --write && sort-package-json",
    "lint": "biome lint --write && sort-package-json",
    "prepare": "lefthook install",
    "test": "tsx --test",
    "test:watch": "tsx --test --watch",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^1.8.1",
    "sort-package-json": "^2.10.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.0"
}
