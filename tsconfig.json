{
  "compilerOptions": {
    "experimentalDecorators": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "aspectra": ["./src"],
      "aspectra/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages/aspectra/src/**/*.ts",
    "packages/aspectra/test/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
