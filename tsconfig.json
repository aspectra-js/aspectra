{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "aspectra": ["src"],
      "#*": ["src/*"],
      "test/*": ["test/*"],
      "package.json": ["package.json"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist", "node_modules"]
}
